<Window x:Class="AsfStartUp.View.ProgressBarView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsfStartUp.View"
        mc:Ignorable="d"
        Title="Progress" Height="100" Width="300" WindowStartupLocation="CenterOwner">
    <Grid Margin="20" DataContext="{Binding}">
        <ProgressBar Minimum="{Binding MinValue}" Maximum="{Binding MaxValue}" Value="{Binding CurrentValue}" />
    </Grid>
</Window>
